<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/background_floating_material_light">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="143dp"
        android:layout_y="6dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="Enter Phone Number"
        android:phoneNumber="true"
        android:textColorHint="@color/abc_primary_text_disable_only_material_light"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_x="6dp"
        android:layout_y="401dp" />

    <EditText
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Enter Message"
        android:textColorHint="@color/abc_primary_text_disable_only_material_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button"
        android:theme="@android:style/MediaButton.Play"
        android:layout_x="6dp"
        android:layout_y="443dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/button_material_dark"
        android:layout_x="271dp"
        android:layout_y="437dp" />

    <TextView
        android:layout_width="242dp"
        android:layout_height="64dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="15dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView1"
        android:layout_alignEnd="@+id/button"
        android:enabled="true"
        android:background="#ffebedff"
        android:layout_toEndOf="@+id/editText1"
        android:layout_x="122dp"
        android:layout_y="85dp"
        android:visibility="invisible"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/my_toolbar"
        android:background="@color/abc_search_url_text_normal"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        >

    </android.support.v7.widget.Toolbar>
</AbsoluteLayout>
